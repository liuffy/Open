{
    "name": "Open",
    "version": "1.1.1",
    "manifest_version": 2,
   "description": "Check if that cafe, late-night diner, bar, [insert name of place] is open with just one click.",

		"author": "Sophia",

		"icons": { 
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png" 
		},

		 "permissions": [
	    "geolocation",
	    "https://ajax.googleapis.com/",
	    "https://api.yelp.com/*"
  ],

    "browser_action": {
		"default_icon": { 
	 		 "128": "icons/icon128.png" 
	 		},
        "default_title": "Open",
        "default_popup": "popup.html"
    }

}